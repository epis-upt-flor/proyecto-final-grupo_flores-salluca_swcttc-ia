@model List<SistemaArtemis.Models.Servicio>
@{
    ViewBag.Title = "ListarMisServicios";
    Layout = "~/Views/Shared/_TecnicoLayout.cshtml";
    List <SistemaArtemis.Models.Cliente> clientes = ViewBag.listacliente;
}

<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white">Trabajos Disponibles</h6>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-sm-3">
                    <a href="~/Servicio/List" class="btn btn-success btn-sm"><i class="fas fa-plus"></i> Nuevo Trabajo</a>
                    <a href="~/Tecnico/Index"  class="btn btn-dark btn-sm"><i class="fas fa-arrow-left"></i> Regresar</a>
                    <h2 class="pagegeader"></h2>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Descripción</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                                <th>Datos del Cliente</th>
                                <th>Telefono cliente</th>
                                <th>Estado</th>

                                <th>Cotización</th>


                            </tr>
                        </thead>

                        <!-- ... (código anterior) ... -->

                        <tbody>
                            @{ var i = 0;}
                            @foreach (var t in Model)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td>@t.Descripcion</td>
                                    <td>@t.Fecha_Inicio.ToString("dd/MM/yyyy")</td>
                                    <td>@t.Fecha_Fin.ToString("dd/MM/yyyy")</td>

                                    <td>
                                        @if (t.Problema != null && ViewBag.listacliente != null)
                                        {
                                            var cliente2 = clientes.FirstOrDefault(x => x.Id_Cliente == t.Problema.Id_Cliente);
                                            if (cliente2 != null)
                                            {
                                                @cliente2.Nombre @cliente2.Apellido
                                            }
                                            else
                                            {
                                                @t.Problema.Id_Cliente
                                            }
                                        }
                                        else
                                        {
                                            @t.Problema.Id_Cliente
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var tefCliente = clientes.FirstOrDefault(y =>y.Id_Cliente == t.Problema.Id_Cliente);
                                            if (tefCliente != null)
                                            {
                                                @tefCliente.Telefono
                                            }
                                        }
                                    </td>
                                    <td>@t.Estado_Servicio.Descripcion</td>
                                    <td>
                                        <a href="~/Archivo/Index/@t.Id_Tecnico" class="btn btn-warning btn-sm"><i class="fas fa-eye"></i> Ver</a>
                                    </td>
                                </tr>
                            }
                        </tbody>



                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


