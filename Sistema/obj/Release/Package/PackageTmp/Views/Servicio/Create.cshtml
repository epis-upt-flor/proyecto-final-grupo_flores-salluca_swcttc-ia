    <div class="card-header py-3 bg-second-primary">
        <h6 class="m-0 font-weight-bold text-white">Detalles de la postulación</h6>
    </div>

 
    <div class="card-body">
        @foreach (var x in problemas)
        {
            // Check if the technician's ID matches the ID associated with the record
            //if (x.Servicio. Cliente.Id_Tecnico == idtecnico)
           // {
                @*<label>Cliente: @x.Cliente.Nombre  @x.Cliente.Apellido</label><br />
                <label>Fecha Inicio :  @x.Fecha_Inicio.ToShortDateString() </label><br />
                <label>Fecha Fin : @x.Fecha_Fin.ToShortDateString() </label><br />
                <label>Descripción : @x.Descripcion </label><br />*@
            //}
        }
        @foreach (var z in archivos)
        {
            // Check if the technician's ID matches the ID associated with the record
            if (z.Id_Tecnico.Equals(idtecnico))
            {
                <label>Nombre de la cotización : @z.Nombre @z.Extension</label><br />
                <label>Precio a Cobrar : S/. @z.Precio</label>
            }
        }
    </div>
</div>



@using (Html.BeginForm("Guardar", "Servicio", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id_Servicio)
    <div class="card-body">
        <div id="file-name"></div>
        @foreach (var y in problemas)
        {
            <div class="form-group"></div>
            <div class="form-group">
                @Html.HiddenFor(x => x.Fecha_Inicio, new { @Value = y.Fecha_Inicio.ToShortDateString() })
            </div>
            <div class="form-group">
                @Html.HiddenFor(x => x.Fecha_Fin, new { @Value = y.Fecha_Fin.ToShortDateString() })
            </div>
            <div class="form-group">
                @Html.HiddenFor(x => x.Id_Tecnico, new { @Value = Convert.ToInt32(@Session["Id_Tecnico"]) })
            </div>
            <div class="form-group">
                @Html.HiddenFor(x => x.Id_Problema, new { @Value = y.Id_Problema })
            </div>
            <div class="form-group">
                @Html.HiddenFor(x => x.Id_Estado_Servicio, new { @Value = 2 })
            </div>
            <div class="form-group">
                @Html.HiddenFor(x => x.Descripcion, new { @Value = y.Descripcion })
            </div>
        }
        @foreach (var t in archivos)
        {
            <div class="form-group">
                @Html.HiddenFor(x => x.Documento, new { @Value = t.Nombre })
            </div>
        }
        <div class="text-right">
            <input type="submit" value="Confirmar" class="btn btn-success" />
            <a href="~/Servicio/List" class="btn btn-danger">Cancelar</a>
        </div>
    </div>
}



