@model SistemaArtemis.Models.Servicio

@{
    ViewBag.Title = "DetallesServicioTecnico";
    Layout = "~/Views/Shared/_TecnicoLayout.cshtml";

    var idtecnico = Session["Id_Tecnico"];
}

<div class="container">
    <h2>Detalles del Servicio</h2>
    <hr />

    <dl class="dl-horizontal">
        <dt>Descripción:</dt>
        <dd>@Model.Descripcion</dd>
        <dt>Fecha de Inicio:</dt>
        <dd>@Model.Fecha_Inicio.ToShortDateString()</dd>
        <dt>Fecha de Fin:</dt>
        <dd>@Model.Fecha_Fin.ToShortDateString()</dd>
        <dt>Documento:</dt>
        <dd>@Model.Documento</dd>
        <dt>Técnico:</dt>
        <dd>@Model.Tecnico.Nombre</dd>
        <dt>Problema:</dt>
        <dd>@Model.Problema.Descripcion</dd>
    </dl>

    <a href="@Url.Action("VisualizarCalificacion1/" + idtecnico, "Tecnico")" class="btn btn-default">Volver</a>
  
</div>
