@{
    ViewBag.Title = "SubirImagenProblema";
    Layout = "~/Views/Shared/_ClienteLayout.cshtml";
}


<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white">Subir fotos del problema</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-5">
                    @*<a href="~/Calificacion/Index/" class="btn btn-dark btn-sm"><i class="fas fa-arrow-left"></i> Regresar</a>
                <h2 class="page-linl"></h2>*@
                </div>
            </div>

            @using (Html.BeginForm("GuardarImagen", "Imagen_Problema", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @*<label>Subir Archivos</label>*@
                <input type="hidden" name="Id_Problema" value="@ViewBag.Id_Problema" />

                <div class="col-sm-6">
                    <label for="formFile" class="form-label">Seleccione la imagen a subir: </label>
                    <input class="form-control" type="file" name="fileInput" id="fileInput" multiple accept="image/*" required>

                </div>
                <br />
                <div class="col-sm-6 text-right">
                    <button type="submit" class="btn btn-primary btn-sm"><i class="fas fa-save"></i> Guardar</button>
                </div>

                @*<div class="col-sm-6 text-end">
                <button type="submit" class="btn btn-primary btn-sm">Guardar</button>
            </div>*@

            }

            <div class="mt-4 text-right">
                <a href="@Url.Action("VisualizarImagenes", "Imagen_Problema", new { id_Problema = ViewBag.Id_Problema })" class="btn btn-success btn-sm"><i class="fas fa-eye"></i> Ver Imágenes</a>
                <a href="@Url.Action("Index", "Cliente")" class="btn btn-dark btn-sm"><i class="fas fa-arrow-left"></i> Regresar</a>
            </div>


        </div>
        

    </div>
</div>
