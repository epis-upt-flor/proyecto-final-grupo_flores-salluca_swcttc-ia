@model List<SistemaArtemis.Models.Imagen_Problema>
@{
    ViewBag.Title = "VisualizarImagenesTecnico";
    Layout = "~/Views/Shared/_TecnicoLayout.cshtml";
}



<h2>VisualizarImagenesTecnico</h2>
<br />
@*<a href="@ Url.Action("Index", "Tecnico")" class="btn btn-secondary">Regresar</a>*@
<a href="@Url.Action("List", "Servicio")" class="btn btn-secondary">Regresar</a>



<hr />

@if (Model.Count > 0)
{
    <div class="row">
        @foreach (var imagen in Model)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <div class="card">
                    <img src="data:image;base64,@Convert.ToBase64String(imagen.Archivo)" class="card-img-top" alt="Imagen">
                    <div class="card-body">
                        <h5 class="card-title">@imagen.Nombre</h5>
                        <p class="card-text">Extensión: @imagen.Extension</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    @*<p>No hay imágenes disponibles.</p>*@
    <div class="alert alert-primary" role="alert">
        No hay imágenes disponibles
    </div>
}




