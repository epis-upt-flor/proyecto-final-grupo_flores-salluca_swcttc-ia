
@model List<SistemaArtemis.Models.Imagen_Problema>

@{
    ViewBag.Title = "VisualizarImagenes";
    Layout = "~/Views/Shared/_ClienteLayout.cshtml";
    var idcliente = Session["Id_Cliente"];
}

<style>
    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
</style>



<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white">Galeria de Imágenes</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-5">
                    <a href="@Url.Action("ListarProblemaCliente/"+idcliente, "Problema")" class="btn btn-dark btn-sm"><i class="fas fa-arrow-left"></i> Regresar</a>
                    <h2 class="page-linl"></h2>
                </div>
            </div>



            @if (Model.Count > 0)
            {
                <div class="row">
                    @foreach (var imagen in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <img src="data:image;base64,@Convert.ToBase64String(imagen.Archivo)" class="card-img-top" alt="Imagen">
                                <div class="card-body">
                                    <h5 class="card-title">@imagen.Nombre</h5>
                                    <p class="card-text">Extensión: @imagen.Extension</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>No hay imágenes disponibles.</p>
            }

        </div>
    </div>
</div>






