                    </div>
                    <div class="sidebar-brand-text mx-3">Sistema SERF</div>
                </a>
                <!-- Divider -->
                <hr class="sidebar-divider my-0">
            </li>
            <!-- Nav Item - Dashboard -->
            <li class="nav-item">
                <a class="nav-link" href="~/Tecnico/Index/@idtecnico">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
