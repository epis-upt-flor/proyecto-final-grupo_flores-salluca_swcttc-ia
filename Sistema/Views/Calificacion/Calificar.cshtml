@model SistemaArtemis.Models.Calificacion
@{
    ViewBag.Title = "Calificar";
    Layout = "~/Views/Shared/_ClienteLayout.cshtml";
    var idcliente = Session["Id_Cliente"];
    var idservicio = ViewBag.idservicio;

    List<SistemaArtemis.Models.Codigo> codigos = ViewBag.Puntaje;
}

