        <h6 class="m-0 font-weight-bold text-white">Califica al Trabajador Técnico </h6>
    </div>
    <div class="card-body">
        <div class="col-md-7">

            <form action="@Url.Action("Guardar","Calificacion")" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Comentario</label>
                    <textarea id="Comentario" name="Comentario" class="form-control" rows="5"></textarea>
                </div>

