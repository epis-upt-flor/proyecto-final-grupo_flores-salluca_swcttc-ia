                <div class="form-group col-sm-7">
                    <label for="Calificacion">Califica su Trabajo</label>
                    <select name="Calificacion1" class="form-control" id="Id_Codigo">
                        <option value="">--Seleccione--</option>
                        @foreach (var t in codigos)
                        {
                            <option value="@t.Codigo1">@t.Descripcion</option>
                        }
                    </select>
                </div>


                <input type="hidden" name="Id_Cliente" value="@idcliente" />
                <input type="hidden" name="Id_Servicio" value="@idservicio" />

                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Enviar Calificación</button>
                </div>
            </form>
