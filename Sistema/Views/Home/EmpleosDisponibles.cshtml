@model List<SistemaArtemis.Models.Problema>
@{
    ViewBag.Title = "EmpleosDisponibles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />
</head>

<div class="pt-0 pb-50">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-2">
                <div class="section-title">
                    <h2>Empleos Recientes</h2>
                </div>
                <table id="myTable" class="" style=" width:100%">
                      <thead>
                        <tr>
                            <th width="50">ID</th>
                            <th >DESCRIPCIÓN</th>
                            <th >INICIO DE LA PUBLICACIÓN</th>
                            <th >FIN DE LA PUBLICACIÓN</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{ var i = 0;}
                        @foreach (var m in Model)
                        {
                            i++;
                            <tr>
                                <th>@i</th>
                                <td>@(m.Descripcion)</td>
                                <td>@(m.Fecha_Inicio.ToString("dd/MM/yyyy"))</td>
                                <td>@(m.Fecha_Fin.ToString("dd/MM/yyyy"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js" type="text/javascript"></script>

<script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
</script>





