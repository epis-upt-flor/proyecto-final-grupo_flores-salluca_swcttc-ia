@model List<SistemaArtemis.Models.Tecnico>

@{
    //ViewBag.Title = "TecnicosDisponibles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pt-0 pb-50">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div class="section-title">
                    <br><h2>Tecnicos Disponibles</h2>
                </div>
                <table id="DataTable" class="" style="width:100%">
                    <thead>
                        <tr>
                            <th width="80">ID</th>
                            <th>NOMBRE Y APELLIDOS</th>
                            <th>ESPECIALIDAD</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{ var i = 0;}
                        @foreach (var t in Model)
                        {
                            i++;
                            <tr>
                                <td>@i</td>
                                <td>@(t.Nombre + " " + t.Apellido)</td>
                                <td>@(t.Especialidad)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>