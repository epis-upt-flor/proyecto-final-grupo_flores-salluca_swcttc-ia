@model SistemaArtemis.Models.Servicio
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_ClienteLayout.cshtml";
    List<SistemaArtemis.Models.Servicio> detalle = ViewBag.detalles;

}

<div class="content-wrapper">
    <div class="card shadow mb-6">
        <div class="card-header py-4 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-user"></i>Visualizar Detalles</h6>
        </div>
        <div class="card-body">
            @foreach (var t in detalle)
            {
                <div class="form-row">
                    <div class="form-group col-sm-8">
                        <label for="">Nombre</label>
                        @Html.TextBoxFor(x => t.Tecnico.Nombre, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(x => t.Tecnico.Nombre, null, new { @class = "label label-danger" })

                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-8">
                        <label for="">Apellido</label>
                        @Html.TextBoxFor(x => t.Tecnico.Apellido, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(x => t.Tecnico.Apellido, null, new { @class = "label label-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-8">
                        @Html.LabelFor(x => t.Tecnico.Telefono)
                        @Html.TextBoxFor(x => t.Tecnico.Telefono, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(x => t.Tecnico.Telefono, null, new { @class = "label label-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-8">
                        <label>Proforma</label>
                        <div class="form-row">
                            <div class="form-group col-sm-8">
                                @Html.TextBoxFor(x => t.Documento, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(x => t.Documento, null, new { @class = "label label-danger" })
                            </div>
                            <div class="form-group col-sm-4">
                                <a href="#" class="btn btn-outline-secondary btn-sm">Descargar</a>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="row">                    
                    <div class="col-sm-4">
                        <a href="" class="btn btn-success  btn-sm btn-block">Aceptar</a>
                    </div>
                    <div class="col-sm-4">
                        <a href="~/Servicio/Guardar2/@t.Id_Problema" class="btn btn-danger  btn-sm btn-block">Rechazar</a>
                    </div>
                </div>


            }
        </div>
    </div>


</div>